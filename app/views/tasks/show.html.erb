<div>
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>

<%= form_for(@task) do |f| %>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
<% end %>

  <div>
    <%= link_to "Edit",
      edit_task_path(params[:id]) %>
  </div>

  <div>
    <%= link_to "Delete",
      task_path(@task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div>
  
  <div>
    <%= link_to "Home", index_path %>
  </div>
</div>
