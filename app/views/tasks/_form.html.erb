<%= form_for(@task) do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="mb-3">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <div class="mb-3">
    <%= f.label :completed %>
    <%= f.check_box :completed %>
  </div>
  <div>
   <%= f.submit %>
  </div>
<% end %>
